{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],

        /* Module Resolution */
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "dist",
        "declaration": true,

        /* Source Maps */
        "sourceMap": true,
        "declarationMap": true,

        /* Linting */
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["projects/**/src/**/*.ts"],
    "exclude": ["**/node_modules", "**/dist"]
}